<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h2
      class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center"
    >
      A Simple ToDo List Webapp
    </h2>

    <div
      class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center"
    >
      <div class="list-group">
        <% for( var i = 0; i < tasks.length; i++){ %>
        <label class="list-group-item d-flex gap-3">
          <input
            class="form-check-input flex-shrink-0"
            type="checkbox"
            value=""
            style="font-size: 1.375em"
          />
          <span class="pt-1 form-content stretched-link">
            <strong><%= tasks[i] %></strong>
          </span>
        </label>

        <% } %>
      </div>
    </div>

    <form action="/submit" method="POST">
      <input type="text" name="newtask" />
      <button>Add Task</button>
    </form>
  </body>
</html>
