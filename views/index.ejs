<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h2
      class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center"
    >
      A Simple ToDo List
    </h2>

    <div
      class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center title box"
    >
      <h1><%= title %></h1>
    </div>

    <div
      class="d-flex flex-column flex-md-row p-4 gap-4 py-md-4 align-items-center justify-content-center"
    >
      <div class="list-group">
        <% for( var i = 0; i < tasks.length; i++){ %>
        <label class="list-group-item d-flex gap-3">
          <input
            class="form-check-input flex-shrink-0"
            type="checkbox"
            value=""
            style="font-size: 1.375em"
          />
          <span class="pt-1 form-content stretched-link">
            <strong><%= tasks[i] %></strong>
          </span>
        </label>
        <% } %>
        <form
          action="/"
          method="POST"
          class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center"
        >
          <div class="mb-3 input">
            <input
              type="text"
              class="form-control"
              name="newtask"
              list=""
              placeholder="New Item"
            />
          </div>
          <button type="submit" class="btn btn-primary taskBtn">
            Add Task
          </button>
        </form>
        <form action="/work" method="POST"></form>
      </div>
    </div>
  </body>
</html>
